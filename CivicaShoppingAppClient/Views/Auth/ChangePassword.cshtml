@using CivicaShoppingAppClient.ViewModels
@model ChangePasswordViewModel

<div class="container mt-0">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-0">
                <div class="card-header text-center bgColor">
                    <h5 class="card-title text-white mb-0"><i class="fas fa-key"></i> Change Password</h5>
                </div>
                <div class="card-body bg-light">
                    <form asp-action="ChangePassword" method="post">
                        @* <div asp-validation-summary="All" class="text-danger"></div> *@
                        <input type="hidden" asp-for="LoginId" value="@User.Identity.Name" />
                        <div class="form-group">
                            <label asp-for="OldPassword" class="control-label"><i class="fas fa-key"></i> Old password</label>
                            <input asp-for="OldPassword" class="form-control" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="NewPassword" class="control-label"><i class="fas fa-lock"></i> New password</label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="NewConfirmPassword" class="control-label"><i class="fas fa-check-circle"></i> Confirm new password</label>
                            <input asp-for="NewConfirmPassword" class="form-control" />
                            <span asp-validation-for="NewConfirmPassword" class="text-danger"></span>
                        </div>
                        <br />
                        @* <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" /> |
                        <a asp-action="Index" class="btn btn-danger" asp-controller="Home">Cancel</a>
                        </div> *@
                        <div class="form-group text-center m-1">
                            <button type="submit" value="Submit" class="btn civicaBtn"><i class="fas fa-save"></i> Change Password</button>
                            <a asp-action="Index" class="btn btn-secondary" asp-controller="Home"><i class="fas fa-times"></i> Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
