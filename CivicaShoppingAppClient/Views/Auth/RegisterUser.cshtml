@using CivicaShoppingAppClient.ViewModels
@model RegisterViewModel

<div class="container mt-1 p-0" style="max-width: 75%;">
    <div class="card-header bgColor">
        <h3 class="text-center m-0 p-3"><i class="fas fa-user-plus"></i> Register User</h3>
    </div>
    <div class="card-body bg-light">
        <form asp-action="RegisterUser" method="post" class="p-4 rounded">
            <div class="row mb-3">
                <div class="form-group col-md-3">
                    <label asp-for="Salutation" class="control-label">Title</label>
                    <div class="input-group">
                        <span class="input-group-text" style="height: 38px;"><i class="fas fa-user"></i></span>
                        <select asp-for="Salutation" class="form-control text-center">
                            <option value="" selected disabled hidden>-</option>
                            <option value="Ms.">Ms.</option>
                            <option value="Mr.">Mr.</option>
                            <option value="Mrs.">Mrs.</option>
                        </select>
                    </div>
                    <span asp-validation-for="Salutation" class="text-danger"></span>
                </div>
                <div class="form-group col-md-9">
                    <label asp-for="Name" class="control-label">Name</label>
                    <div class="input-group">
                        <span class="input-group-text" style="height: 38px;"><i class="fas fa-user"></i></span>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="LoginId" class="control-label">Login id</label>
                <div class="input-group">
                    <span class="input-group-text" style="height: 37px;"><i class="fas fa-user"></i></span>
                    <input asp-for="LoginId" class="form-control" />
                </div>
                <span asp-validation-for="LoginId" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="Phone" class="control-label">Phone number</label>
                    <div class="input-group">
                        <span class="input-group-text" style="height: 37px;"><i class="fas fa-phone"></i></span>
                        <input asp-for="Phone" class="form-control" />
                    </div>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email" class="control-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text" style="height: 37px;"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col-md-6">
                    <label asp-for="Password" class="control-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text" style="height: 37px;"><i class="fas fa-lock"></i></span>
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ConfirmPassword" class="control-label">Confirm password</label>
                    <div class="input-group">
                        <span class="input-group-text" style="height: 37px;"><i class="fas fa-check-circle"></i></span>
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex">
                <div class="form-group mb-3" style="max-width: 100%;">
                    <label asp-for="BirthDate" class="control-label">Birthdate</label>
                    <div class="input-group">
                        <span class="input-group-text" style="height: 37px;"><i class="fas fa-calendar"></i></span>
                        <input asp-for="BirthDate" type="date" class="form-control" id="BirthDate" />
                    </div>
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 d-flex" style="margin-top: 40px; margin-left: 30px;">
                    <label asp-for="Gender" class="control-label"><i class="fas fa-venus-mars"></i> Gender</label>
                    <div class="form-check mx-2">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="M" id="genderMale" />
                        <label class="form-check-label" for="genderMale">Male</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Gender" value="F" id="genderFemale" />
                        <label class="form-check-label" for="genderFemale">Female</label>
                    </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col-md-8">
                    <label asp-for="SecurityQuestionId" class="control-label">Password hint question</label>
                    <div class="input-group">
                        <span class="input-group-text" style="height: 37px;"><i class="fas fa-question-circle"></i></span>
                        <select id="securityQuestionDropdown" asp-for="SecurityQuestionId" class="form-control" asp-items="@(new SelectList(Model.SecurityQuestion, "SecurityQuestionId", "Question"))">
                            <option value="" selected disabled>--Select password hint question--</option>
                        </select>
                    </div>
                    <span asp-validation-for="SecurityQuestionId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Answer" class="control-label">Answer</label>
                    <div class="input-group">
                        <span class="input-group-text" style="height: 37px;"><i class="fas fa-key"></i></span>
                        <input asp-for="Answer" class="form-control" />
                    </div>
                    <span asp-validation-for="Answer" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group text-center m-1">
                <button type="submit" value="Submit" class="btn civicaBtn"><i class="fas fa-save"></i> Sign up</button>
                <a asp-action="Index" class="btn btn-secondary" asp-controller="Home"><i class="fas fa-times"></i> Cancel</a>
            </div>
            <p class="text-center">Already have an account? Click here to <a asp-action="LoginUser" asp-controller="Auth" style="text-decoration: underline"> Signin</a></p>
        </form>
    </div>
</div>
<style>
    /* .container {
        max-width: 950px;
        margin: auto;
        padding: 20px;
    } */
    /* Adjust the max-width as per your design */
    /* Center align the form */
    /* box-shadow: 0 0 10px rgba(0,0,0,0.1); */ /* Add a subtle box shadow for depth */

    .form-label {
        font-weight: bold; /* Make labels bold */
    }

    .form-control {
        margin-bottom: 10px; /* Add spacing between form controls */
    }

    .btn-primary {
        width: 100%; /* Make the submit button full width */
    }

    .text-danger {
        font-size: 0.85rem; /* Adjust error message font size */
    }

    .card-header {
        background-color: #009CA6;
        color: white;
    }

    /* Compress field width */
    @@media (max-width: 768px) {
        .form-control {
            width: 100%;
        }
    }
    /* Make form controls full width on smaller screens */
</style>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var today = new Date().toISOString().split('T')[0];
            document.getElementById('BirthDate').max = today;
        });
    </script>
}
