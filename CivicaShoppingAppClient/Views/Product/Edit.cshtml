@using CivicaShoppingAppClient.ViewModels
@model UpdateProductViewModel
<head>
    <style>
        .card-header {
            background-color: #009CA6;
            color: white;
        }
    </style>
</head>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card bg-white rounded shadow-sm">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-edit"></i> Update Product</h5>
                </div>
                <div class="card-body">

                <form asp-action="Edit" method="post">

                    <input type="hidden" asp-for="ProductId" /> 

                    <div class="form-group mb-3">
                        <label asp-for="ProductName" class="control-label"><i class="fas fa-cube"></i> Product Name</label>
                        <input asp-for="ProductName" class="form-control" />

                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ProductDescription" class="control-label"><i class="fas fa-info-circle"></i> Product Description</label>
                        <input asp-for="ProductDescription" class="form-control" />
                        <span asp-validation-for="ProductDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Quantity" class="control-label"><i class="fas fa-sort-numeric-up"></i> Product Quantity</label>
                        <input asp-for="Quantity" type="number" class="form-control" />

                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                            <label asp-for="ProductPrice" class="control-label"><i class="fa-solid fa-indian-rupee-sign"></i> Product Price</label>
                        <input asp-for="ProductPrice" class="form-control" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn civicaBtn"><i class="fas fa-save"></i> Update</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-list"></i> Back to list</a>
                    </div>

                </form>
            </div>
            </div>
        </div>
    </div>
</div>
