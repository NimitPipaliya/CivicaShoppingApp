@using CivicaShoppingAppClient.ViewModels
@model ProductListViewModel


<div class="container" *ngIf="!loading">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="card-title text-dark">@Model.ProductName</h2>
                    <p class="card-text text-secondary">@Model.ProductDescription</p>
                    <div class="final-price mb-2"><i class="fas fa-shopping-cart mr-1"></i> Quantity: @Model.Quantity</div>
                    <div class="price mb-2"><i class="fas fa-money-bill-alt mr-1"></i> Price: @Model.ProductPrice</div>
                    <div class="price mb-2"><i class="fas fa-money-bill-alt mr-1"></i> GST price: @Model.GstPercentage</div>
                    <div class="final-price mb-3"><i class="fas fa-money-check-alt mr-1"></i> Final price: @Model.FinalPrice</div>
                    <div class="d-flex">
                        <a class="btn civicaBtn btn-sm" asp-action="Edit" asp-route-id="@Model.ProductId"><i class="fas fa-edit mr-1"></i> Edit</a>
                        <form method="post" action="@Url.Action("Delete", "Product")">
                            <input type="hidden" name="productId" value="@Model.ProductId" />
                            <button type="submit" class="btn btn-danger mx-2" style="font-size:13px" onclick="return confirm('Are you sure you want to delete?')"><i class="fa fa-trash-alt mr-1"></i> Delete</button>
                        </form>
                        <a class="btn btn-secondary btn-sm" asp-action="Index"><i class="fas fa-list mr-1"></i> Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



