@using CivicaShoppingAppClient.ViewModels
@model List<OrderSummaryViewModel>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="d-flex justify-content-between my-3 align-items-center">

            <h3 class="flex-item-1">Order summary</h3>
            <h4 class="flex-item-2">#@Model[0].OrderNumber</h4>
            </div>

            <table class="table text-center">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-center">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var products in Model)
                    {
                        <tr>
                            <td>@products.Product.ProductName</td>
                            <td class="text-center">@products.OrderQuantity</td>
                            <td class="text-center">&#x20B9;@(Math.Round(products.OrderQuantity * products.Product.finalPrice, 2))</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2" class="text-right"><strong>Total order amount:</strong></td>
                        <td class="fw-bold">&#x20B9;@(Math.Round(Model[0].OrderAmount, 2))</td>
                    </tr>
                    <tr>
                        <td colspan="2"><strong>Order date:</strong> </td>
                            <td>@Model[0].OrderDate.ToString("MMMM dd, yyyy")</td>
                    </tr>
                </tfoot>
            </table>
            <a class="btn btn-secondary btn-sm" asp-action="GetAllOrdersByUserId" asp-route-userId="@Model[0].UserId"><i class="fas fa-list mr-1"></i> Back</a>
        </div>
    </div>
</div>
