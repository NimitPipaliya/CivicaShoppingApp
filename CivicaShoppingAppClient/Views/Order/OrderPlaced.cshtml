@using CivicaShoppingAppClient.ViewModels
@model List<OrderSummaryViewModel>

<div class="container">
        <h2 class="text-success text-center">Order placed successfully!</h2>
        <p class="text-danger text-center"> *Note: Orders that are not shown in order summary won't be placed. They might not be in stock.</p>
    <div class="row">
        <div class="col-md-8 mx-auto">

            <div class="d-flex justify-content-between my-3 align-items-center">

                <h3 class="flex-item-1">Order summary</h3>
                <h4 class="flex-item-2">#@Model[0].OrderNumber</h4>
            </div>

            <table class="table text-center">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var products in Model)
                    {
                        <tr>
                            <td>@products.Product.ProductName</td>
                            <td>@products.OrderQuantity</td>
                            <td>&#x20B9;@(Math.Round(products.OrderQuantity * products.Product.finalPrice, 2))</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2" class="text-right"><strong>Total order amount:</strong></td>
                        <td class="fw-bold">&#x20B9;@(Math.Round(Model[0].OrderAmount, 2))</td>
                    </tr>
                    <tr>
                        <td colspan="2"><strong>Order date:</strong> </td>
                        <td>@Model[0].OrderDate.ToString("MMMM dd, yyyy")</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-center mt-4">
            <a asp-action="Index" asp-controller="Home" class="btn civicaBtn mx-2"><i class="fas fa-home"></i> Home</a>
            <a asp-action="BuyProducts" asp-controller="Cart" class="btn civicaBtn mx-2"><i class="fas fa-shopping-cart"></i> Shop more!</a>
        </div>
    </div>
</div>
